<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        
    </package>
    
    <package name="controllers" namespace="/" extends="struts-default">
        
        <action name="home" class="controllers.HomeController" method="execute">
            <result name="success">/views/home.jsp</result>
        </action>
        
        <action name="client" class="controllers.ClientController" method="execute">
            <result name="success">/views/client.jsp</result>
        </action>
        
        <action name="add_client" class="controllers.SubmitController" method="execute">
            <result name="success">/views/new_client.jsp</result>
        </action>
        
    </package>
</struts>